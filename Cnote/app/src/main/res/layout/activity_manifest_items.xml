<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="srmicrosystems.cnote.ManifestGenActivity"
    android:orientation="horizontal">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="10dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingTop="0dp"
        tools:context="srmicrosystems.cnote.ManifestGenActivity"
        android:background="#6d131011"
        android:visibility="visible"
        android:layout_marginBottom="10dp"
        android:layout_margin="0dp"
        android:padding="0dp">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016150412123"
            android:id="@+id/CNNumber"
            android:textSize="18sp"
            android:textIsSelectable="true"
            android:textColor="#3860ef" />
        <TextView
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:text="FedEx Suart"
            android:id="@+id/ConsignerDetails"
            android:layout_below="@id/CNNumber"
            android:textSize="22sp"
            android:textIsSelectable="false"
            android:textColor="#6eec6a" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BOM"
            android:id="@+id/destcc"
            android:textSize="32sp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:textColor="#fff700"
            android:layout_toLeftOf="@+id/uqty" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(Mumbai)"
            android:id="@+id/dsetcity"

            android:layout_marginStart="10dp"
            android:textSize="9sp"
            android:layout_below="@+id/destcc"
            android:layout_alignStart="@+id/destcc"
            android:textColor="#ffffff" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:id="@+id/dash"
            android:textSize="38sp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_toLeftOf="@id/destcc"
            android:textColor="#ffffff" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SRT"
            android:id="@+id/fromcc"
            android:textSize="32sp"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/dash"
            android:layout_marginStart="20dp"
            android:textColor="#61f135" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(Surat)"
            android:id="@+id/fromc"

            android:layout_marginStart="20dp"
            android:textSize="9sp"
            android:layout_below="@+id/fromcc"
            android:layout_alignStart="@+id/fromcc"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="80"
            android:id="@+id/uqty"
            android:textSize="32sp"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="10dp"
            android:textColor="#ff0000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:id="@+id/slash"
            android:textSize="33sp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/uqty"
            android:layout_marginStart="0dp"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100"
            android:id="@+id/tqty"
            android:textSize="33sp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/slash"
            android:layout_marginStart="0dp"
            android:textColor="#14b5ff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016150412123"
            android:id="@+id/BookingDate"

            android:textSize="20sp"
            android:layout_toStartOf="@+id/updateqty"
            android:textDirection="rtl"
            android:textColor="#f028c5" />
        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="FedEx Mumai"
            android:id="@+id/tocon"
            android:layout_below="@id/BookingDate"
            android:textDirection="rtl"
            android:textSize="22sp"
            android:textIsSelectable="false"
            android:layout_alignEnd="@+id/BookingDate"
            android:layout_toEndOf="@+id/tqty"
            android:textColor="#fb7522" />

      <srmicrosystems.cnote.MyNumberPicker

          android:id="@+id/updateqty"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="65sp"
          android:layout_toLeftOf="@+id/UploadBTN"
          android:textColor="#c0ff04">
      </srmicrosystems.cnote.MyNumberPicker>
      <ImageButton
          android:layout_width="65dp"
          android:layout_height="65dp"
          android:src="@drawable/single_package"
          android:scaleType="fitCenter"
          android:id="@+id/UploadBTN"
          android:text="Upload"
          android:padding="10dp"
          android:layout_toStartOf="@+id/UploadFULLBTN"
          android:background="@android:color/transparent"
          android:layout_alignBottom="@+id/UploadFULLBTN"
          android:layout_below="@+id/dsetcity" />

<ImageButton
    android:layout_width="65dp"
    android:layout_height="65dp"
    android:src="@drawable/box_icon"
    android:id="@+id/UploadFULLBTN"
    android:text="FUll Load"
    android:scaleType="fitCenter"
    android:background="@android:color/transparent"
    android:layout_below="@+id/dsetcity"
    android:layout_alignParentEnd="true" />

        <Spinner
            android:layout_width="140dp"
            android:layout_height="54dp" android:id="@+id/mixval"
            android:layout_below="@+id/UploadBTN"
            android:layout_toRightOf="@+id/updateqty"  ></Spinner>

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/mixedbag"
            android:id="@+id/MixedBTN"
            android:text="Mixed Bag"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            android:layout_below="@+id/UploadFULLBTN"
            android:layout_alignEnd="@+id/ConsignerDetails"
            android:layout_toStartOf="@+id/mixval" />


    </RelativeLayout>



</GridLayout>
